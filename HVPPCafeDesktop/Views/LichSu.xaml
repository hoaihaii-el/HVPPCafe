<UserControl 
    x:Class="HVPPCafeDesktop.Views.LichSu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:design="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d" 
    TextElement.FontFamily="{StaticResource NunitoLight}"
    TextElement.FontSize="17"
    d:DesignHeight="673" 
    d:DesignWidth="1146">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{DynamicResource SearchBar}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="4*"/>
                    </Grid.ColumnDefinitions>
                    <fa:ImageAwesome 
                        Grid.Column="0"
                        Icon="Search"
                        Foreground="#DFDFDF"
                        Height="20"/>
                    <TextBox
                        Grid.Column="1"
                        Margin="0 0 10 0"
                        Text="{Binding Search}"
                        design:HintAssist.Hint="Tìm kiếm số hóa đơn"
                        Style="{StaticResource SearchBox}"/>
                </Grid>
            </Border>
            <ComboBox
                Grid.Column="1"
                VerticalAlignment="Center"
                Text="{Binding FilterMaNV}"
                design:HintAssist.Hint="Mã nhân viên"
                Style="{StaticResource FloatingComboBox}"/>
            <Label 
                Grid.Column="2"
                Content="Thời gian:"
                VerticalAlignment="Center"
                Foreground="#3C6255"
                HorizontalAlignment="Center"/>
            <DatePicker 
                Grid.Column="3"
                Margin="5 0"
                Height="47"
                SelectedDate="{Binding DateBegin, Mode=TwoWay, ValidatesOnDataErrors=False, UpdateSourceTrigger=PropertyChanged}"
                design:HintAssist.Hint="Từ ngày"
                Style="{StaticResource FloatingDatePicker}" 
                    SelectedDateFormat="Short" />
            <DatePicker 
                Grid.Column="4"
                Margin="5 0"
                Height="47"
                SelectedDate="{Binding DateEnd, Mode=TwoWay, ValidatesOnDataErrors=False, UpdateSourceTrigger=PropertyChanged}"
                design:HintAssist.Hint="Đến ngày"
                Style="{StaticResource FloatingDatePicker}" 
                SelectedDateFormat="Short" />
            <Button
                Grid.Column="5"
                Content="Xuất file Excel"
                Command="{Binding ExportCM}" 
                Style="{StaticResource PrimaryButton}">
            </Button>
        </Grid>
        <Grid Grid.Row="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListView 
                    x:Name="ItemsControl"
                    ItemsSource="{Binding ListBill}"
                    Style="{StaticResource PrimaryListView}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn 
                                DisplayMemberBinding="{Binding SoHoaDon}"
                                Width="160"
                                Header="Số HD" />
                            <GridViewColumn
                                DisplayMemberBinding="{Binding TriGia}"
                                Width="200"
                                Header="Thành tiền" />
                            <GridViewColumn 
                                DisplayMemberBinding="{Binding NgayHoaDon}"
                                Width="200"
                                Header="Ngày hóa đơn" />
                            <GridViewColumn 
                                DisplayMemberBinding="{Binding HinhThucThanhToan}"
                                Width="250"
                                Header="Hình thức trả" />
                            <GridViewColumn 
                                DisplayMemberBinding="{Binding NgayHD}"
                                Width="200"
                                Header="Khuyến mãi" />
                            <GridViewColumn>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button 
                                            Command="{Binding ElementName=ItemsControl, Path=DataContext.DetailCM}"
                                            CommandParameter="{Binding}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Height="27">
                                            <fa:ImageAwesome 
                                                Icon="Eye" 
                                                Foreground="{StaticResource Primary}"/>
                                        </Button>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
