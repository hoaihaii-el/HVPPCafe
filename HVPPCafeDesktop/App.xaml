<Application x:Class="HVPPCafeDesktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HVPPCafeDesktop"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Page.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Button.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Image.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Text.xaml"/>
                <ResourceDictionary Source="Resources/Utilities/DataTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <FontFamily x:Key="Nunito">./Resources/Fonts/Nunito-SemiBold.ttf#Nunito</FontFamily>
            <FontFamily x:Key="NunitoLight">./Resources/Fonts/Nunito-Regular.ttf#Nunito</FontFamily>

            <SolidColorBrush x:Key="Primary">#004225</SolidColorBrush>
            <SolidColorBrush x:Key="Secondary">#FFB000</SolidColorBrush>
            <SolidColorBrush x:Key="Optional">#004225</SolidColorBrush>

        </ResourceDictionary>
    </Application.Resources>
</Application>
